@model WebChat.Models.ChatModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Chat</title>
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <span class="username" id="Username">
    </span>
    <div id="container">
        <h3>Введите имя:</h3>
        <input type="text" id="txtUsername" />
        <button id="btnLogin">Войти</button>        
    </div>
    @Ajax.ActionLink("Login", "Index", new { user = "" },
        new AjaxOptions { UpdateTargetId = "container", OnSuccess = "LoginOn" },
        new { @id = "LoginButton", @style = "visibility:hidden;" })

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/Scripts/chat.js")
</body>
</html>

